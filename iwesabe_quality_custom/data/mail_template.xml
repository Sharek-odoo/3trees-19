<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="quality_alert_email_template" model="mail.template">  
			<field name="name">Quality Aleart</field>
			<field name="model_id" ref="iwesabe_quality_custom.model_quality_alert"/>
			<field name="email_from">"{{ object.env.user.partner_id.email }}" </field>
			<field name="email_to">"{{ object.user_id.partner_id.email }}"</field>
			<field name="subject">"Quality Aleart {{ object.name }}"</field>
			<field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">      
					<div style="margin: 0px; padding: 0px;">                   
						<p style="margin: 0px; padding: 0px; font-size: 13px;">                       
							Dear <t t-out="object.name"/>,                        
							<br/>
							<br/>                    
							The quality check is now in <t t-out="object.stage_id.name"/> stage.               
							<br/>
							<br/>                       
							Regards,                   
							<br/>                
							<t t-out="object.company_id.name"/>           
						</p>            
					</div>
				</div>
			</field>
		</record>
	</data>
</odoo>
