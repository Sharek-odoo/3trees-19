<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quality_alert_view_form_inherit_iwesabe" model="ir.ui.view">
        <field name="name">quality.alert.view.form.inherit.iwesabe</field>
        <field name="model">quality.alert</field>
        <field name="inherit_id" ref="quality_control.quality_alert_view_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//field[@name='stage_id']" position="before">
        		<button string="Send Notification" type="object" class="oe_highlight"
                    name="action_send_notification" groups="quality.group_quality_manager"/>
        	</xpath>
            <xpath expr="//field[@name='picking_id']" position="after">
                <field name="franchise_id"/>
            </xpath>
        </field>
    </record>

    <record id="quality_point_view_form_inherit_iwesabe" model="ir.ui.view">
        <field name="name">quality.point.view.form.inherit.iwesabe</field>
        <field name="model">quality.point</field>
        <field name="inherit_id" ref="quality.quality_point_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="franchise_id"/>
            </xpath>
        </field>
    </record>

    <record id="quality_check_view_form_inherit_iwesabe" model="ir.ui.view">
        <field name="name">quality.check.view.form.inherit.iwesabe</field>
        <field name="model">quality.check</field>
        <field name="inherit_id" ref="quality_control.quality_check_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='measure_on']" position="after">
                <field name="franchise_id"/>
            </xpath> 
        </field>
    </record>
</odoo>
