<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="branch_screen_tree_view" model="ir.ui.view">
            <field name="name">branch.screen.tree</field>
            <field name="model">branch.screen</field>
            <field name="arch" type="xml">
                 <list string="Branch Screen">
                    <field name="name"/>
                    <field name="franchise_id"/>
                </list>
            </field>
        </record>

        <record id="branch_screen_form_view" model="ir.ui.view">
            <field name="name">branch.screen.tree</field>
            <field name="model">branch.screen</field>
            <field name="arch" type="xml">
                 <form string="Branch Screen">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="franchise_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>

    <record id="branch_screen_action" model="ir.actions.act_window">
        <field name="name">Branch</field>
        <field name="res_model">branch.screen</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="branch_screen_tree_view"/>
    </record>
</odoo>
