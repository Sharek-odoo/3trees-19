<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="branch_move_inherited" model="ir.ui.view">
            <field name="name">Branch Move form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="branch_id"
                    options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'
                    required="0" readonly="state !=  'draft'"/>
                </field>
            </field>
        </record>
        
        <record id="branch_move_inherited_tree" model="ir.ui.view">
            <field name="name">Branch Move.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_tree"/>
            <field name="arch" type="xml">
                <field name="ref" position="after">
                    <field name="branch_id"
                    options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'
                    required="0" readonly="state !=  'draft'"/>
                </field>
            </field>
        </record>

        <record id="view_account_move_line_form" model="ir.ui.view">
            <field name="name">account.move.line.inherited</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='line_ids']/list/field[@name='partner_id']"
                       position="after">
                    <field name="branch_id"
                    options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'
                    />
                </xpath>
            </field>
        </record>
        <record id="view_account_move_line_tree" model="ir.ui.view">
            <field name="name">account.move.line.inherited.tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="branch_id"/>
                </field>
            </field>
        </record>
        <record id="view_out_invoice_tree_inherite" model="ir.ui.view">
            <field name="name">account.out.invoice.tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <field name="invoice_date" position="before">
                    <field name="branch_id"/>
                </field>
            </field>
        </record>
    </data>
</odoo>