<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="account_invoice_branch_manager_new" model="ir.rule">
            <field name="name">Account Branch Manager</field>
            <field name="model_id" ref="model_account_move" />
            <field name="global" eval="True" />
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups"
                eval="[(4, ref('iwesabe_branch_management.group_branch_user_manager'))]" />
        </record>

        <record id="account_invoice_branch_new" model="ir.rule">
            <field name="name">Account Branch</field>
            <field name="model_id" ref="model_account_move" />
            <field name="global" eval="True" />
            <field name="domain_force">[('branch_id','=',user.branch_id.id)]</field>
            <field name="groups" eval="[(4, ref('iwesabe_branch_management.group_branch_user'))]" />
        </record>

        <record model="ir.rule" id="account_move_branch_rule">
            <field name="name">Invoice/Bill Multi Branch</field>
            <field name="model_id" ref="account.model_account_move" />
            <field name="domain_force">
                ['|',('branch_id','=',False),('branch_id', 'in', user.branch_ids.ids)]
            </field>
        </record>

    </data>
</odoo>