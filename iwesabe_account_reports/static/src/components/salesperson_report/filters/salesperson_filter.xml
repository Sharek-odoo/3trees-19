            <t t-if="'salesperson' in controller.options">
                <div id="filter_salesperson" class="filter_salesperson">
                    <t t-call="iwesabe_account_reports.AccountReportFilterSalesPerson"/>
                </div>
            </t>
        </xpath>
    </t>
</templates>







