<odoo>
    <record id="action_sale_picking_tree_all" model="ir.actions.act_window">
        <field name="name">Transfers</field>
        <field name="res_model">stock.picking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">list,kanban,form,calendar</field>
        <field name="domain">[('sale_id', '=', active_id)]</field>
        <field name="context">{'contact_display': 'partner_address', 'default_company_id': allowed_company_ids[0]}
        </field>
        <field name="search_view_id" ref="stock.view_picking_internal_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No transfer found. Let's create one!
            </p>
            <p>
                Transfers allow you to move products from one location to another.
            </p>
        </field>
    </record>
</odoo>