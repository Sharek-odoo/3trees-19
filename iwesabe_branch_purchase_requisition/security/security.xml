<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
         <record id="purchase_branch_manager_rule" model="ir.rule">
            <field name="name">Purchase requisition Branch Manager </field>
            <field name="model_id" ref="model_purchase_requisition"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(4, ref('iwesabe_branch_management.group_branch_user_manager'))]"/>
        </record>
        <record id="purchase_branch_rule" model="ir.rule">
            <field name="name">Purchase requisition Branch</field>
            <field name="model_id" ref="model_purchase_requisition"/>
            <field name="global" eval="True"/>
            <field name="domain_force">[('branch_id','=',user.branch_id.id)]</field>
            <field name="groups" eval="[(4, ref('iwesabe_branch_management.group_branch_user'))]"/>
        </record>

    </data>
</odoo>
